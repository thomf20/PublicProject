@page
@model PublicProject.Pages.BlogAdmin.DetailsModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Details";
}

<head>
    <title>Itsy | A cutesy little template by FreeHTML5.co</title>

    <meta charset="UTF-8" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
          type="text/css" media="all" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Amatic+SC%3A400%2C700%7CLato%3A400%2C700%2C400italic%2C700italic&amp;ver=4.9.8"
          type="text/css" media="screen" />
    <link rel="stylesheet" href="~/css/Itsy/style.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/css/Itsy/print.css" type="text/css" media="print" />
    <!--[if (lt IE 9) & (!IEMobile)]>
    <link rel="stylesheet" id="lt-ie9-css" href="ie.css" type="text/css" media="screen"/>
    <![endif]-->
    <script src='js/jquery-3.0.0.min.js'></script>
    <script src='js/jquery-migrate-3.0.1.min.js'></script>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>

@if (SignInManager.IsSignedIn(User))
{
    var inAdminRole = User.IsInRole("Admin");
    if (inAdminRole == true)
    {
        <h1>Details</h1>

<div>
    <h4>Blog</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blog.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blog.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blog.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blog.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blog.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blog.Popularity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog.Popularity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blog.SubcategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog.SubcategoryId)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Blog?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
    }
    else
    {
          <p>You dont have accsess to this site, please go back to the <a asp-page="./Index">BackMain page</a></p>
    }

}
else
{
      <p>You dont have accsess to this site, please go back to the <a asp-page="./Index">BackMain page</a></p>
}
@page
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{

    var user = await UserManager.GetUserAsync(User);
}
@model PublicProject.Pages.Neuron
@{
}


<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <title>Neuron Template - @Model.BlogPost.Header</title>
    <!--

    Template 2085 Neuron

    http://www.tooplate.com/view/2085-neuron

    -->
    <link rel="stylesheet" href="css/Neuron/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/Neuron/css/font-awesome.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="css/Neuron/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Lora|Merriweather:300,400" rel="stylesheet">

</head>
<body>

        <!-- Content of the element -->
   

    <!-- Navigation section  -->

    <div class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container">

            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                </button>
                <a href="index.html" class="navbar-brand"></a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="https://localhost:44394">Home</a></li>
  
                </ul>
            </div>

        </div>
    </div>

    <!-- Home Section -->

    <section id="home" class="main-single-post parallax-section">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">

               @* <div class="col-md-12 col-sm-12">
                    <h1>Single Post</h1>
                </div>*@

            </div>
        </div>
    </section>

    <!-- Blog Single Post Section -->

    <section id="blog-single-post">
        <div class="container">
            <div class="row">

                <div class="col-md-offset-1 col-md-10 col-sm-12">
                    <div class="blog-single-post-thumb">
                        <div class="blog-post-title">
                            <h2>@Model.BlogPost.Text</h2>
                        </div>

                    </div>
                </div>
                <div class="blog-post-des">
                    <div class="blog-post-image">
                        <img src="~/img/@Model.BlogPost.Image" class="img-responsive" alt="Blog Image 3">
                    </div>
            </div>
            </div>
            </div>
    </section>


   



        <!-- Footer Section -->

    <footer>
        <div class="container">
            <div class="row">

                <div class="col-md-5 col-md-offset-1 col-sm-6">
                    <h3>Public Project</h3>
                    <p>@Model.BlogPost.Footer</p>
                    <div class="footer-copyright">
                        <p>Copyright &copy; 2023 Public Project - Design: Tooplate</p>
                    </div>
                </div>
                <div class="clearfix col-md-12 col-sm-12">
                    <hr>
                </div>

                <div class="col-md-12 col-sm-12">
                    <ul class="social-icon">
                        <li><a href="@Model.BlogPost.Facebook" class="fa fa-facebook"></a></li>
                        <li><a href="@Model.BlogPost.Twitter" class="fa fa-twitter"></a></li>
                        <li><a href="@Model.BlogPost.YouTube" class="fa fa-youtube"></a></li>
                        <li><a href="@Model.BlogPost.Instagram" class="fa fa-instagram"></a></li>
                        
                    </ul>
                </div>

            </div>
        </div>
    </footer>

    <!-- Back top -->
    <a href="#back-top" class="go-top"><i class="fa fa-angle-up"></i></a>

    <!-- SCRIPTS -->
    <!--<script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.parallax.js"></script>
    <script src="js/custom.js"></script>-->
    </div>
</body>
</html>
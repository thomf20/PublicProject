@page
@model PublicProject.Pages.EditBlogModel
@{
}
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Blog.Id" />
            <div class="form-group">
                <label asp-for="Blog.Title" class="control-label"></label>
                <input asp-for="Blog.Title" class="form-control" />
                <span asp-validation-for="Blog.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Text" class="control-label"></label>
                <input asp-for="Blog.Text" class="form-control" />
                <span asp-validation-for="Blog.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input asp-for="Blog.Image" class="form-control" type="hidden" readonly />
                <span asp-validation-for="Blog.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input asp-for="Blog.Date" class="form-control" type="hidden" readonly />
                <span asp-validation-for="Blog.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Blog.UserId" class="form-control" readonly type="hidden" />
                <span asp-validation-for="Blog.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Blog.Popularity" class="form-control" readonly type="hidden" />
                <span asp-validation-for="Blog.Popularity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Blog.SubcategoryId" class="form-control" readonly type="hidden" />
                <span asp-validation-for="Blog.SubcategoryId" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <input type="file" class="form-control" name="UploadedImage">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

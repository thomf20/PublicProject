@page
@model PublicProject.Pages.BlogAdmin.CreateModel

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Create";
    var user = await UserManager.GetUserAsync(User);


}


@if (SignInManager.IsSignedIn(User))
{
    var inAdminRole = User.IsInRole("Admin");
    if (inAdminRole == true)
    {
        <h1>Create</h1>
        <h4>Blog</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Blog.Title" class="control-label"></label>
                        <input asp-for="Blog.Title" class="form-control" />
                        <span asp-validation-for="Blog.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Blog.Text" class="control-label"></label>
                        <input asp-for="Blog.Text" class="form-control" />
                        <span asp-validation-for="Blog.Text" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Blog.Image" class="control-label"></label>
                        <input asp-for="Blog.Image" class="form-control" />
                        <span asp-validation-for="Blog.Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">

                        <label asp-for="Blog.Date" class="control-label"></label>

                        <input asp-for="Blog.Date" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" readonly class="form-control" />  @*vet ej varför detta inte funkar*@
                        <span asp-validation-for="Blog.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Blog.UserId" class="control-label"></label>
                        <input asp-for="Blog.UserId" value="@user.Id" readonly class="form-control" />
                        <span asp-validation-for="Blog.UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Blog.Popularity" class="control-label"></label>
                        <input asp-for="Blog.Popularity" class="form-control" value="0" readonly />
                        <span asp-validation-for="Blog.Popularity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Blog.SubcategoryId" class="control-label"></label>
                        <input asp-for="Blog.SubcategoryId" class="form-control" />
                        <span asp-validation-for="Blog.SubcategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">Back to List</a>
        </div>
    }
    else
    {
        <p>You dont have accsess to this site, please go back to the <a href="https://localhost:44394/">Main page</a></p>
    }
  
}
else
{
    <p>You dont have accsess to this site, please go back to the <a href="https://localhost:44394/">Main page</a></p>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

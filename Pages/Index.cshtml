@page
@model IndexModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Home page";
    var user = await UserManager.GetUserAsync(User);
}


<link rel="stylesheet" href="~/css/site.css" />

@if (SignInManager.IsSignedIn(User))
{

}



<div class="viewbutton">
    <a class="btn btn-primary" asp-page="/BlogViewer">View all Blogs</a>
</div>

<div class="container">

    <div class="frontpage-text">
        <span> Welcome to <strong>Public Project!</strong></span>

    </div>
    <br />
    <div class="secondfrontpage-text">
        <p class="badge badge-primary">This is a example blog</p>
    </div>
</div>


    <div class="example-blog">

        <p>
            @if(Model.Blogs !=null)
            {
                <div class="card m-2" style="width: 500px">
                       <img class="card-img-top" src="~/img/@Model.Blogs[0].Image">
                <div class="card-body">
                    <h5 class="card-title">@Model.Blogs[0].Header</h5>
                    <p class="card-text">@Model.Blogs[0].Text</p>
                </div>
                <p class="card-footer">@Model.Blogs[0].Date</p>
                </div>  
            }
        </p>

    @if (SignInManager.IsSignedIn(User))
        {
              <a asp-page="/overview" asp-route-id="@user.Id">View User Profile</a>
        }
    </div>


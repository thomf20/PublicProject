@page
@model PublicProject.Pages.CRUD.IndexModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    
    var user = await UserManager.GetUserAsync(User);
}
   
<h1>Index</h1>

<p>Du är inloggad som @User.Identity.Name</p>

@if (SignInManager.IsSignedIn(User))
{
    var inAdminRole = User.IsInRole("Admin");
    if (inAdminRole == true )

    {
        <p>
            <a asp-page="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Blog[0].Header)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Blog[0].Text)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Blog[0].Image)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Blog[0].Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Blog[0].UserId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Blog[0].Popularity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Blog[0].Footer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Blog[0].Facebook)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Blog[0].Instagram)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Blog[0].YouTube)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Blog[0].Twitter)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Blog)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Header)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Text)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Image)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Popularity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Footer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Facebook)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Instagram)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.YouTube)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Twitter)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
}






<!--Comment section-->
@foreach(var comment in Model.Comments)
{
    if(Model.BlogPost.Id == comment.BlogId)
    {
        <div class="comment">
            <h2 class="comment-content">@comment.Text</h2>
            <p class="comment-footer">| @comment.Author | @comment.Date </p>
            <div class="row">
                <div class="col-md-4">
                    <form method="post" asp-page-handler="Report">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="ReportMessage.reporterId" value="@user.Id" readonly class="form-control" type="hidden" />
                            <span asp-validation-for="ReportMessage.reporterId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ReportMessage.reportedId" value="@comment.UserId" readonly class="form-control" type="hidden" />
                            <span asp-validation-for="ReportMessage.reportedId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="ReportMessage.Text" class="control-label">Anledning</label>
                                    <input asp-for="ReportMessage.Text" class="form-control" />
                                    <span asp-validation-for="ReportMessage.Text" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>&nbsp;</label>
                                    <input type="submit" value="Report" class="btn btn-danger" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}
